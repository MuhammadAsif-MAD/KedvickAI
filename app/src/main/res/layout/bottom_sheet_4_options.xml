<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_bottom_sheet_"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingVertical="@dimen/_15sdp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:paddingTop="@dimen/_3sdp"
                android:text="View Profile Picture"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:layout_alignBottom="@id/tvOne"
                android:background="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingVertical="@dimen/_15sdp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:paddingTop="@dimen/_3sdp"
                android:text="Change Profile Image"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/lineView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:layout_alignBottom="@+id/tvTwo"
                android:background="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:text="Remove Profile Picture"
                android:textColor="@color/dark_red_color"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8ssp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/bg_bottom_sheet_"
        android:elevation="@dimen/_3sdp"
        android:paddingVertical="@dimen/_15sdp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/dark_red_color"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>