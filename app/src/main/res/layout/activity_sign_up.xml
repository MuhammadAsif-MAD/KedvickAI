<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.auth.activities.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollIndicators="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_main" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_15sdp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/lato_extra_bold"
                    android:gravity="center"
                    android:text="Letâ€™s Get Started"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="Start your journey with our robust AI. Sign up or sign in\n to unleash powerful writing capabilities!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/edName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_ed_8dp_border"
                    android:drawableStart="@drawable/user_ic"
                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="Name"
                    android:maxLength="30"
                    android:inputType="textCapSentences"
                    android:nextFocusDown="@+id/email"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Email Address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_ed_8dp_border"
                    android:drawableStart="@drawable/gmail_ic"
                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="Email Address"
                    android:maxLength="50"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/password"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_ed_8dp_border">

                    <EditText
                        android:id="@+id/edPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/password_ic"
                        android:layout_toStartOf="@+id/icPasswordEye"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="**********"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:nextFocusDown="@+id/btnEmailLogin"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/icPasswordEye"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/eye_close"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:text="Referral Code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:text=" (Optional)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_ed_8dp_border">

                    <EditText
                        android:id="@+id/edReferralCode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:background="@color/transparent"
                        android:backgroundTint="@color/grey_3"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="Referral Code"
                        android:inputType="text"
                        android:maxLength="30"
                        android:nextFocusDown="@+id/referral_code"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="HardcodedText" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llSignUpTermsPolicies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="By continuing you agree to our"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTermsOfServices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_extra_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:text="Terms &amp; Conditions"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="and"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tvPrivacyPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_extra_bold"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_5sdp"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="Privacy Policy."
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@drawable/bg_main_color_without_stroke_corner_10sdp">

                    <TextView
                        android:id="@+id/tv_create_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/lato_black"
                        android:text="Create Account"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/btnCreateAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tvOrSignInWith"
                    android:background="@color/white"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tvOrSignInWith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="or sign in using"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tvOrSignInWith"
                    android:background="@color/white"
                    app:tint="@color/white" />
            </RelativeLayout>

<!--            <LinearLayout-->
<!--                android:id="@+id/llAppleSignIn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/_38sdp"-->
<!--                android:layout_marginHorizontal="@dimen/_12sdp"-->
<!--                android:layout_marginTop="@dimen/_8sdp"-->
<!--                android:background="@drawable/bg_ed_8dp_border"-->
<!--                android:clickable="true"-->
<!--                android:focusable="true"-->
<!--                android:gravity="center"-->
<!--                android:orientation="horizontal">-->

<!--                <ImageView-->
<!--                    android:layout_width="22dp"-->
<!--                    android:layout_height="22dp"-->
<!--                    android:layout_marginHorizontal="@dimen/_8sdp"-->
<!--                    app:srcCompat="@drawable/apple_ic" />-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Apple"-->
<!--                    android:textColor="@color/white"-->
<!--                    app:fontFamily="sans-serif-medium"-->
<!--                    tools:ignore="HardcodedText" />-->

<!--            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/llGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_ed_8dp_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    app:srcCompat="@drawable/google_ic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:textColor="@color/white"
                    app:fontFamily="sans-serif-medium"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/already_have_a_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_200sdp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtDontHaveAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/lato_regular"
                    android:text="If you already have an account"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txtDontHaveAccount"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-3dp"
                    android:layout_toEndOf="@+id/txtDontHaveAccount"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="Sign In"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/layout_loader"
        layout="@layout/loader_layout" />

</RelativeLayout>