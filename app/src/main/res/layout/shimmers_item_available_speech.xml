<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_7sdp"
    android:background="@drawable/bg_black_rounded">

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:id="@+id/shimmerMic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/shimmer_background_oval"
                android:layout_centerVertical="true" />

            <View
                android:id="@+id/shimmerTitle"
                android:layout_width="0dp"
                android:layout_height="@dimen/_16sdp"
                android:layout_toEndOf="@id/shimmerMic"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shimmer_background_rounded"
                android:layout_centerVertical="true"
                android:layout_weight="1" />

            <View
                android:id="@+id/shimmerArrow"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shimmer_background_oval" />

        </RelativeLayout>

        <View
            android:id="@+id/shimmerDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@drawable/shimmer_background_rounded" />

    </LinearLayout>

</RelativeLayout>
