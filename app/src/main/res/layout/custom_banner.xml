<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cookie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_28sdp">

    <LinearLayout
        android:id="@+id/ll_cookie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/bg_10sdp_app_color"
        android:elevation="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_17sdp"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:src="@drawable/ic_warning_sign"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_toStartOf="@id/btn_action"
                android:layout_toEndOf="@id/iv_icon"
                android:fontFamily="@font/lato_bold"
                android:text="Title!"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="-2dp"
                android:layout_toStartOf="@id/btn_action"
                android:layout_toEndOf="@id/iv_icon"
                android:fontFamily="@font/lato_medium"
                android:text="This is the message"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Yes"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>